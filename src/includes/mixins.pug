mixin journal_item(wide, direction)
    .journal-item(class= wide? 'journal-item--wide' : '')
        .journal-item__picture
            img(src='images/grid/grid_mnt_1.jpg' alt='Awesome mount one')
            .journal-item__icon
                img(src='images/heart.png', alt='')
        .journal-item__description(class= direction? 'journal-item__description--'+direction : '')
            .journal-item__category love
            h3.journal-item__heading   Lorem ipsum dolor sit amet, consectetur adipisicing elit. Recusandae, corporis.
            p.journal-item__details  Lorem ipsum dolor sit amet, consectetur adipisicing elit. Dolorem minus laboriosam, similique ipsum dolor sit amet, consectetur adip?
            .journal-item__count 01

mixin stage()
    li.stage
        .stage__number 1
        .stage__icon
        p.stage__description  Lorem ipsum dolor sit amet, consectetur adipisicing elit. Commodi dolor, deleniti tempora.

mixin location()
    li.location
        .location__inner
            .location__rating
                +rating(5)
            .location__info
                h4.location__title Alps
                p.location__description  Lorem ipsum dolor sit amet, consectetur.
            footer.location__footer
                .location__old-price 3150$
                .location__price $793

mixin rating(count)
    -for (var i = 0; i < count; i++)
        span.star